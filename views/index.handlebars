<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <img id="logo" class="responsive" src="/img/logo.png" alt="logo">

        {{!-- <h1>{{msg}}</h1>  --}}
        <form class="clearfix mb-4" action="POST">
          <div class="row">
            <div class="col-10">
              <div class="form-group">

                <label for="product">Product</label>
                <input type="text" id="product" class="form-control" aria-describedby="list-text"
                  placeholder="e.g banana , bread, detergent">

              </div>

            </div>
            <div class="col-2">
               <div class="form-group">

                <label for="quantity">#</label>
                <input type="text" id="quantity" class="form-control" aria-describedby="list-text">

              </div>

            </div>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" aria-describedby="item-description"
              placeholder="e.g Pinesole, Cookie Dough, Chips"></textarea>
          </div>
          <button id="submit" class="btn btn-danger float-right">Submit</button>
        </form>

        <h3>Your Shopping list</h3>
        <ul id="shopping-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-outline-danger float-right delete">X</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>

    {{!-- map --}}
    <div class="row">
      <div class="col-8 offset-2">
        <button class="accordion" class="btn btn-danger float-right">Nearby Stores</button>
        <div class="panel">
          <div class="row mb-2">
            <div class="col">
              <input class="form-control" style="margin-top: 20px" id="search" type="text" placeholder="Search..." />
            </div>
          </div><br>


          <div id="mapdiv">
            <div id="map"></div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

</div><br>


{{!-- script for accordion --}}
<script>
  var acc = document.getElementsByClassName("accordion");
  var i;

  for (i = 0; i < acc.length; i++) {
    acc[i].addEventListener("click", function () {
      this.classList.toggle("active");
      var panel = this.nextElementSibling;
      if (panel.style.maxHeight) {
        panel.style.maxHeight = null;
      } else {
        panel.style.maxHeight = panel.scrollHeight + "px";
      }
    });
  }
</script>
