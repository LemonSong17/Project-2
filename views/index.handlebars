<div id="home">
  <div class="container">
    {{!-- login  --}}
    <button class="btn btn-dark float-right" onclick="document.getElementById('id01').style.display='block'"
      style="width:auto;">Login</button> <br><hr color="red" align="left" width="100%" size="6">

    <div id="id01" class="modal">

      <form class="modal-content animate" action="" method="post">
        <div class="container">
          <label for="uname"><b>Username</b></label>
          <input type="text" placeholder="Enter Username" name="uname" required>

          <label for="psw"><b>Password</b></label>
          <input type="password" placeholder="Enter Password" name="psw" required>

          <button type="submit" class="btn btn-info float-right">Login</button>
          <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
          </label>
        </div>

        <div class="container" style="background-color:#f1f1f1">
          <button type="button" onclick="document.getElementById('id01').style.display='none'"
            class="logincancelbtn">Cancel</button>
          <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
      </form>
    </div>

    <script>
      // Get the modal
      var modal = document.getElementById('id01');

      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function (event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      }
    </script>

    {{!-- _____________ --}}

    <div class="row">
      <div class="col-8 offset-2">
        <img id="logo" class="responsive" src="/img/logo.png" alt="logo"> <br><br>

        {{!-- <h1>{{msg}}</h1>  --}}

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">

            <form class="clearfix mb-4" action="POST">
