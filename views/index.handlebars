<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <img id="logo" class="responsive" src="/img/logo.png" alt="logo">

        {{!-- <h1>{{msg}}</h1>  --}}
        <form class="clearfix mb-4" action="POST" style="padding-top: 75px;">
          <div class="row">
            <div class="col-10">
              <div class="form-group">

                <label for="product">Product</label>
                <input type="text" id="product" class="form-control" aria-describedby="list-text"
                  placeholder="e.g banana , bread, detergent">

              </div>

            </div>
            <div class="col-2">
              <div class="form-group">

                <label for="quantity">#</label>
                <input type="text" id="quantity" class="form-control" aria-describedby="list-text">

              </div>

            </div>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" aria-describedby="item-description"
              placeholder="e.g Pinesole, Cookie Dough, Chips"></textarea>
          </div>
          <button id="submit" class="btn btn-danger float-right">Submit</button>
        </form>

        <h3>Your Shopping list</h3>
        <ul id="shopping-list" class="list-group" style="padding-bottom: 20px;">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-outline-danger float-right delete">X</button>
          </li>
          {{/each}}
        </ul>

        {{!-- preferences modal --}}
        {{!-- <button type="button" class="btn btn-danger float-right" data-toggle="modal"
          data-target="#preferencesModal">Preferences</button> --}}




        <!-- Button trigger modal -->
        <button type="button" class="btn btn-danger float-right" data-toggle="modal" data-target="#listPreferences" style="padding-top: 20;">
          Preferences
        </button>

        <!-- Modal -->
        <div class="modal fade" id="listPreferences" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Insert item to list preferences</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="container">

                  <form id="myForm" method="post" style="padding-top: 20px">
                    <div class="form-group">
                      <label for="item">Item</label>
                      <input type="item" class="form-control" id="item" aria-describedby="item"
                        placeholder="Enter item">
                      <small id="item" class="form-text text-muted"> Enter an item you regularly buy</small>
                    </div>

                     <div class="form-group">
                      <label for="currentQuantity">Current quantity</label>
                      <input type="item" class="form-control" id="currentQuantity" aria-describedby="currentQuantity"
                        placeholder="Enter current Quantity">
                      
                    </div>
                  
                    <div class="form-group">
                      <label for="preferredQuantity">Preffered quantity</label>
                      <input type="item" class="form-control" id="prefferedQuantity" aria-describedby="preferredQuantity"
                        placeholder="Enter Preferred Quantity">
                      
                    </div>
                  
                  
                  </form>

                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger">Save changes</button>
              </div>
            </div>
          </div>
        </div>





      </div>
    </div>

    {{!-- map --}}
    <div class="row">
      <div class="col-8 offset-2">
        <button class="accordion" class="btn btn-danger float-right">Nearby Stores</button>
        <div class="panel">
          <div class="row mb-2">
            <div class="col">
              <input class="form-control" style="margin-top: 20px" id="search" type="text" placeholder="Search..." />
            </div>
          </div><br>


          <div id="mapdiv">
            <div id="map"></div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

